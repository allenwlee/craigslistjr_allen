<%=erb :_nav, layout: false%>
<div class="container">
  <h1>Welcome to Craigslist, Jr!</h1>


</div>
<div class="container">
  <h1>Listings</h1>
  <table>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>price</th>
      <th>category</th>
    </tr>

    <% @posts.each do |p| %>
    <tr>
      <td>
        <a href=/post/<%=p.id%>>
          <%=p.id%>
        </a>
      </td>
      <td>
        <a href=/post/<%=p.id%>>
          <%=p.title%>
        </a>
      </td>
      <td>
        <a href=/post/<%=p.id%>>
          <%=p.price%>
        </a>
      </td>
      <td>
        <a href=/category/<%=p.category_id%>>
          <%=p.category_id%>
        </a>
      </td>
    </tr>
    <%end%>
    
  </table>
  
</div>
